{
  "parser": "babel-eslint",
  "env": {
    "node": true,
    "es6": true
  },
  "extends": "airbnb-base",
  "rules":{
    "vars-on-top": 2,
    "no-undef": 2,
    "arrow-parens": 0,
    "no-plusplus": 0,
    "no-unused-vars": ["error", { "argsIgnorePattern": "next" }],
    "import/newline-after-import": 0
  }
}
